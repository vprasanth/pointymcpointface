{
  "name": "ack",
  "private": true,
  "version": "0.1.0",
  "description": "Ack for Slack: award points with @user++",
  "main": "src/index.js",
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "test:container": "docker compose run --rm app npm test",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f --tail=100 app",
    "db:psql": "docker compose exec db psql -U postgres -d ack"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@slack/bolt": "^4.0.0",
    "dotenv": "^16.4.0",
    "pino": "^9.0.0",
    "pg": "^8.11.3"
  }
}
